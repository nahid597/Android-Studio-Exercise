<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#766c6c"
    android:padding="10dp"
    tools:context="com.nano.sharedprefarance.MainActivity">


    <EditText
        android:textColorHint="#0e0e0e"
        android:textSize="25dp"
        android:hint="Enter user name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/userNameId"

        />


    <EditText
        android:inputType="textPassword"
        android:textColorHint="#0b0b0b"
        android:textSize="25dp"
        android:hint="Enter user password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/userPassId"

        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            style="@style/Widget.AppCompat.Button.Colored"
            android:id="@+id/saveButtonId"

            />


        <Button
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Load"
            style="@style/Widget.AppCompat.Button.Colored"
            android:id="@+id/loadButtonId"

            />


    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:id="@+id/textId"
        android:textAlignment="center"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:textColor="#181718"


        />


</LinearLayout>
